{
    "manifest_version": 3,
    "name": "百度翻译助手",
    "version": "1.0",
    "description": "百度翻译助手，快速翻译网页内容。",
    "default_locale": "zh_CN",
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://api.fanyi.baidu.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "百度翻译助手"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}